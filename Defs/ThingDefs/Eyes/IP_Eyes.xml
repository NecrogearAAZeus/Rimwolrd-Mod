    <!-- IMSL SENTINEL SCOUT -->
    <!-- 부위 효율 110%, 사격 정확도 2%상승 무기 사거리 증가 3%  -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>IP_IMSL_SENTINEL_SCOUT</defName>
        <label>IMSL SENTINEL SCOUT</label>
        <labelNoun>IMSL SENTINEL SCOUT</labelNoun>
        <!-- Imperial Marine Strategic Laboratory에서 개발한 Sentinel Project 전투용 안구입니다. 이 안구는 병사들의 사격 능력을 향상시키기 위해 설계되었으며, 내장된 조준 시스템을 통해 명중률을 높이고, 보다 먼 거리의 표적도 정확히 겨냥할 수 있게 합니다. -->
        <description>This is a combat eye developed by the Imperial Marine Strategic Laboratory as part of the Sentinel Project. Designed to enhance soldiers marksmanship, its integrated targeting system improves accuracy and allows engagement of distant targets with precision.</description>
        <descriptionHyperlinks>
            <ThingDef>IP_IMSL_SENTINEL_SCOUT</ThingDef>
        </descriptionHyperlinks>
        <spawnThingOnRemoved>IP_IMSL_SENTINEL_SCOUT</spawnThingOnRemoved>
        <stages>
            <li>
                <statOffsets>
                    <ShootingAccuracyPawn>2</ShootingAccuracyPawn>
                </statOffsets>
                <statFactors>
                    <VEF_VerbRangeFactor>1.03</VEF_VerbRangeFactor>
                </statFactors>
            </li>
        </stages>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.10</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>

