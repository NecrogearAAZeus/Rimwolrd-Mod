            <ThingDef>IP_ORD02_PHANTOM_REAPER</ThingDef>
        </descriptionHyperlinks>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.00</partEfficiency>
        </addedPartProps>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>Reaper Blade</label>
                        <capacities>
