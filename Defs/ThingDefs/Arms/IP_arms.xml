    <!-- IDC-17 MOLE SALVAGE -->

    <HediffDef ParentName="AddedBodyPartBase">
        <defName>IP_IDC17_MOLE_SALVAGE</defName>
        <label>IDC-17 MOLE SALVAGE</label>
        <labelNoun>IDC-17 MOLE SALVAGE</labelNoun>
        <!-- Interstellar Development Corps에서 개발한 채굴 특화 보조 팔입니다. 자원이 척박한 환경에서도 효율적으로 자원을 회수할 수 있도록 설계되었습니다. 채굴 속도는 다소 느려지지만, 손실률을 최소화하고 정밀한 추출을 통해 더 많은 자원을 확보할 수 있습니다. -->
