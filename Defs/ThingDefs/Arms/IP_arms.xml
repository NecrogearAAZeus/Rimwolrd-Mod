        <descriptionHyperlinks>
            <ThingDef>IP_IDC17_MOLE_SALVAGE</ThingDef>
        </descriptionHyperlinks>
        <addedPartProps>
            <solid>true</solid>
            <partEfficiency>1.1</partEfficiency>
            <betterThanNatural>true</betterThanNatural>
        </addedPartProps>
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>fist</label>
                        <capacities>
                            <li>Blunt</li>
                        </capacities>
                        <power>10</power>
                        <cooldownTime>2</cooldownTime>
                        <linkedBodyPartsGroup>Hands</linkedBodyPartsGroup>
                        <armorPenetration>0.2</armorPenetration>
                    </li>
                </tools>
            </li>
        </comps>

        <spawnThingOnRemoved>IP_IDC17_MOLE_SALVAGE</spawnThingOnRemoved>
        <stages>
            <li>
                <statFactors>
                    <MiningSpeed>0.8</MiningSpeed>
                    <DeepDrillingSpeed>0.8</DeepDrillingSpeed>
                </statFactors>
                <statOffsets>
                    <MiningYield>0.1</MiningYield>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

