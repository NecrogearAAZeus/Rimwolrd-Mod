            <solid>true</solid>
            <partEfficiency>1.0</partEfficiency>
        </addedPartProps>
        <spawnThingOnRemoved>IP_DAON_28_CHEF_FRESHPRO</spawnThingOnRemoved>
        <stages>
            <li>
                <statFactors>
                    <IP_CookingPoisonChanceFactor>0.1</IP_CookingPoisonChanceFactor>
                    <CookSpeed>0.8</CookSpeed>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

