    <!-- DAON-28 CHEF FRESHPRO -->
    <!-- 조리시 식중독 확률계수 10%(요리시 요리가 식중독에 오염될 확률 감소), 요리속도 80%(느리게 조리) -->
    <HediffDef ParentName="AddedBodyPartBase">
        <defName>IP_DAON_28_CHEF_FRESHPRO</defName>
        <label>DAON-28 CHEF FRESHPRO</label>
        <labelNoun>DAON-28 CHEF FRESHPRO</labelNoun>
        <!-- DAON사에서 만들어진 조리 보조용 코입니다. 조리 과정에서 문제가 있는 재료들을 후각으로 감지하고 제거할 수 있도록 도와 조리시간은 길어지지만 음식 조리시 음식이 오염될 확률을 낮춰줍니다.-->
