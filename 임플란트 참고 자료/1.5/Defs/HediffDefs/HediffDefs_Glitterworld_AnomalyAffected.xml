	<!-- Auxiliary AI (sharpshooter) -->

	<HediffDef ParentName="addedPartGlitteryImplants">
		<defName>EPIA_AuxiliaryAI_Sharpshooter</defName>
		<label>auxiliary AI: sharpshooter</label>
		<description>An installed auxiliary AI that aids combat, specializing in accuracy and long distance fire. Cannot be installed with other auxiliary AI.</description>
		<descriptionHyperlinks><ThingDef>EPIA_AuxiliaryAI_Combat</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>EPIA_AuxiliaryAI_Combat</spawnThingOnRemoved>
		<aptitudes>
			<Shooting>2</Shooting>
		</aptitudes>
		<stages>
			<li>
				<statFactors>
					<ShootingAccuracyFactor_Long>1.25</ShootingAccuracyFactor_Long>
					<ShootingAccuracyFactor_Medium>1.25</ShootingAccuracyFactor_Medium>
				</statFactors>
				<statOffsets>
					<ShootingAccuracyPawn>+10</ShootingAccuracyPawn>
					<AimingDelayFactor>-0.10</AimingDelayFactor>
					<RangedCooldownFactor>-0.10</RangedCooldownFactor>
					<MeleeHitChance>-3</MeleeHitChance>
					<MortarMissRadiusFactor>-0.3</MortarMissRadiusFactor>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_ReactOnDamage">
				<damageDefIncoming>EMP</damageDefIncoming>
				<createHediff>EPIA_EMP_Disorientation_Sharpshooter</createHediff>
			</li>
		</comps>
		<tags>
			<li>AuxiliaryAI_Combat</li>
		</tags>
	</HediffDef>

	<!-- Auxiliary AI (commando) -->

	<HediffDef ParentName="addedPartGlitteryImplants">
		<defName>EPIA_AuxiliaryAI_Commando</defName>
		<label>auxiliary AI: commando</label>
		<description>An installed auxiliary AI that aids combat, supporting the user in coping with the pressures of combat. Less affected by EMP compared with other combat AI. Cannot be installed with other auxiliary AI.</description>
		<descriptionHyperlinks><ThingDef>EPIA_AuxiliaryAI_Combat</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>EPIA_AuxiliaryAI_Combat</spawnThingOnRemoved>
		<!--aptitudes>
			<Melee>1</Melee>
			<Shooting>1</Shooting>
		</aptitudes-->
		<stages>
			<li>
				<painFactor>0.85</painFactor>
				<statFactors>
					<MeleeCooldownFactor>0.8</MeleeCooldownFactor>
				</statFactors>
				<statOffsets>
					<ShootingAccuracyPawn>+5</ShootingAccuracyPawn>
					<AimingDelayFactor>-0.15</AimingDelayFactor>
					<RangedCooldownFactor>-0.15</RangedCooldownFactor>
					<MentalBreakThreshold>-0.12</MentalBreakThreshold>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_ReactOnDamage">
				<damageDefIncoming>EMP</damageDefIncoming>
				<createHediff>EPIA_EMP_Disorientation_Commando</createHediff>
			</li>
		</comps>
		<tags>
			<li>AuxiliaryAI_Combat</li>
		</tags>
	</HediffDef>

	<!-- Auxiliary AI (brawler) -->

	<HediffDef ParentName="addedPartGlitteryImplants">
		<defName>EPIA_AuxiliaryAI_Brawler</defName>
		<label>auxiliary AI: brawler</label>
		<description>An installed auxiliary AI that aids close quarter combat, supporting the user with life or death decisions. Cannot be installed with other auxiliary AI.</description>
		<descriptionHyperlinks><ThingDef>EPIA_AuxiliaryAI_Combat</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>EPIA_AuxiliaryAI_Combat</spawnThingOnRemoved>
		<!--aptitudes>
			<Melee>2</Melee>
		</aptitudes-->
		<stages>
			<li>
				<painFactor>0.85</painFactor>
				<statFactors>
					<MeleeCooldownFactor>0.9</MeleeCooldownFactor>
					<MeleeDamageFactor>1.1</MeleeDamageFactor>
					<StaggerDurationFactor>0.9</StaggerDurationFactor>
				</statFactors>
				<statOffsets>
					<ShootingAccuracyPawn>-4</ShootingAccuracyPawn>
