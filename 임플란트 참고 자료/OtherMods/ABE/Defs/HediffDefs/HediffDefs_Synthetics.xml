	<!-- AI chip -->

	<HediffDef ParentName="addedPart_SyntheticImplants">
		<defName>AIChip</defName>
		<label>AI Chip</label>
		<labelNoun>an AI chip</labelNoun>
		<description>An installed AI chip. Through special chemicals and electric shocks this little chip is able to completely restore the user's consciousness and mobility.</description>
		<descriptionHyperlinks><ThingDef>AIChip</ThingDef></descriptionHyperlinks>
		<spawnThingOnRemoved>AIChip</spawnThingOnRemoved>
		<hediffClass>Hediff_Implant</hediffClass>
		<stages>
			<li>
				<partIgnoreMissingHP>true</partIgnoreMissingHP>
				<partEfficiencyOffset>0.40</partEfficiencyOffset>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.25</offset>
					</li>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

	<ThingDef ParentName="EPIA_UpgradeSyntheticBase">
		<defName>AIChip</defName>
		<label>AI chip</label>
		<description>Through special chemicals and electric shocks this little chip is able to completely restore the user's consciousness and mobility. Requires brain surgery research before installing.</description>
		<descriptionHyperlinks><RecipeDef>InstallAIChip</RecipeDef></descriptionHyperlinks>
		<costList>
			<EPOE_MAAI_Chip>1</EPOE_MAAI_Chip>
			<Neutroamine>10</Neutroamine>
			<Silver>2</Silver>
			<Gold>1</Gold>
			<Steel>25</Steel>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
		<butcherProducts>
			<EPOE_MAAI_Chip>1</EPOE_MAAI_Chip>
			<Neutroamine>10</Neutroamine>
			<Silver>2</Silver>
			<Gold>1</Gold>
			<Steel>25</Steel>
			<Plasteel>15</Plasteel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</butcherProducts>
		<statBases>
			<Mass>0.1</Mass>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>

	<RecipeDef ParentName="EPIA_RecipeUpgradeSynthetic">
		<defName>CreateAIChip</defName>
		<label>assemble AI chip</label>
		<description>Upgrade brain stimulator into AI chip brain implant.</description>
		<jobString>Upgrading brain stimulator.</jobString>
		<products>
			<AIChip>1</AIChip>
		</products>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>BrainStimulator</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>EPOE_MAAI_Chip</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Gold</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>BrainStimulator</li>
				<li>EPOE_MAAI_Chip</li>
				<li>Gold</li>
				<li>Plasteel</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>

