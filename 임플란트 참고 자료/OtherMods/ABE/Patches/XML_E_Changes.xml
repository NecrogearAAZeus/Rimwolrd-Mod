<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>XML Extensions</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/XmlExtensions.SettingsMenuDef[defName="EPOE_Forked_Menu"]/settings/li[@Class="XmlExtensions.Setting.RadioButtons" and key="CraftingMethod"]</xpath>
					<value>
						<li Class="XmlExtensions.Setting.Text">
							<text>[FSF] Advanced Bionics Expansion mod detected. "Direct crafting only" settings forcefully enabled for consistency.</text>
						</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/XmlExtensions.SettingsMenuDef[defName="EPOE_Forked_Menu"]/settings/li[@Class="XmlExtensions.Setting.Checkbox" and key="RemoveWorkbench"]</xpath>
					<value>
						<li Class="XmlExtensions.Setting.Text">
							<text>[FSF] Advanced Bionics Expansion mod detected. EPOE-Forked workbenches disabled for consistency.</text>
						</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/XmlExtensions.SettingsMenuDef[defName="EPOE_Forked_Menu"]/settings/li[@Class="XmlExtensions.Setting.Checkbox" and key="AddOldProstheticWorkbench"]</xpath>
					<value>
						<li Class="XmlExtensions.Setting.Text">
							<text>[FSF] Advanced Bionics Expansion mod detected. Option to add old prosthetic workbench disabled.</text>
						</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/XmlExtensions.SettingsMenuDef[defName="EPOE_Forked_Menu"]/settings/li[@Class="XmlExtensions.Setting.Checkbox" and key="LegacyMode"]</xpath>
					<value>
						<li Class="XmlExtensions.Setting.Text">
							<text>[FSF] Advanced Bionics Expansion mod detected. Legacy mode option disabled.</text>
						</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>